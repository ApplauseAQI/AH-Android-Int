<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="center_horizontal"
	android:background="@color/background_primary">


	<ScrollView android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:layout_weight="1">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical">
			
			<TextView android:id="@+id/apphance_title" 
				android:layout_height="wrap_content" android:textColor="@color/text_primary"
				android:text="@string/login_welcomeText" android:textSize="18dip"
				android:layout_width="fill_parent" android:layout_marginBottom="5dip"
				android:layout_marginTop="9dip"
				android:gravity="center_vertical" android:paddingLeft="10dip"
				android:paddingRight="10dip" android:drawablePadding="9dip"></TextView>
				
			<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:textColor="@color/text_primary"
				android:textSize="16dip" android:layout_marginBottom="4dip"
				android:text="(Application)" android:id="@+id/application"
				android:gravity="center_vertical|center_horizontal"></TextView>
				
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:orientation="vertical"
				android:padding="3dip">
				
				<LinearLayout android:layout_height="wrap_content"
					android:layout_width="fill_parent" android:orientation="horizontal"
					android:padding="3dip">
					<TextView android:layout_height="wrap_content" android:textColor="@color/text_primary"
						android:layout_width="0dip" android:layout_weight="30"
						android:text="@string/login_emailText" android:gravity="center_vertical|right"
						android:textSize="15dip"></TextView>
					<EditText android:layout_height="wrap_content"
						android:layout_weight="70" android:layout_width="0dip"
						android:layout_marginLeft="5dip" android:id="@+id/email_edit"
						android:inputType="textEmailAddress"></EditText>
				</LinearLayout>
				
				<LinearLayout android:layout_height="wrap_content"
					android:layout_width="fill_parent" android:orientation="horizontal"
					android:padding="3dip">
					<TextView android:layout_height="wrap_content" android:textColor="@color/text_primary"
						android:layout_width="0dip" android:layout_weight="30"
						android:text="@string/login_passwordText" android:gravity="center_vertical|right"
						android:textSize="15dip"></TextView>
					<EditText android:layout_height="wrap_content"
						android:layout_weight="70" android:layout_width="0dip"
						android:layout_marginLeft="5dip" android:id="@+id/password_edit"
						android:inputType="textPassword"></EditText>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:padding="2dip">
		<Button android:layout_height="wrap_content" android:text="@string/login_skipButton"
			android:layout_width="0dip" android:layout_weight="1" android:id="@+id/skip_btn"></Button>
		<Button android:layout_height="wrap_content" android:text="@string/login_loginButton"
			android:layout_width="0dip" android:layout_weight="1" android:id="@+id/login_btn"></Button>
	</LinearLayout>
	<TextView android:layout_height="wrap_content" android:text="Tap anywhere to cancel"
		android:layout_width="fill_parent" android:gravity="right"
		android:padding="7dip" android:textColor="@color/text_primary" android:visibility="gone"></TextView>
</LinearLayout>
