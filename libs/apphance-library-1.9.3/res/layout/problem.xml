<?xml version="1.0"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="@color/background_primary">

	<TextView android:id="@+id/problem_title"
		android:layout_height="wrap_content" android:textColor="@color/text_primary"
		android:text="@string/problem_title" android:textSize="28dip"
		android:layout_width="fill_parent" android:layout_marginBottom="4dip"
		android:layout_marginTop="7dip"
		android:gravity="center_vertical" android:paddingLeft="10dip"
		android:paddingRight="10dip" android:drawablePadding="9dip"></TextView>
		
	<!-- Actual problem report view -->
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
		android:orientation="vertical" 
		android:gravity="center_horizontal">
		
		<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center_horizontal"
					android:id="@+id/problem_application" android:textSize="17dip" android:layout_margin="5dip" android:textColor="@color/text_primary" />			
		
		<ScrollView android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/screenshot_scrollview" android:layout_weight="1">
			<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical" android:gravity="center_horizontal">
				<EditText android:layout_width="fill_parent"
				android:hint="@string/problem_hint" android:textSize="18dip" android:id="@+id/message_edit"
				android:gravity="top|left" android:layout_margin="0dip" android:layout_height="wrap_content"
				android:inputType="textMultiLine" android:minLines="3"></EditText>
				<TextView android:layout_height="wrap_content" android:textColor="@color/text_primary"
				android:id="@+id/problem_postscriptum"
				android:text="@string/problem_postscriptum" android:textSize="15dip" android:layout_width="fill_parent"
				android:layout_marginTop="5dip" android:gravity="center_horizontal"></TextView>
				<ImageView
					android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dip"
					android:id="@+id/screenshot_img"
					android:padding="0dip" android:scaleType="fitStart"></ImageView>
			</LinearLayout>
		</ScrollView>
		
		<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent">
			<Button android:layout_height="wrap_content" android:id="@+id/back_btn"
				android:text="@string/problem_back" android:layout_width="0dip"
				android:layout_weight="1"></Button>
			<Button android:layout_height="wrap_content"
				android:layout_weight="1" android:layout_width="0dip" android:text="@string/problem_report"
				android:id="@+id/report_btn"></Button>
		</LinearLayout>
	
	</LinearLayout>

