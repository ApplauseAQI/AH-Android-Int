<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.apphance.android"
    android:versionCode="1803"
    android:versionName="1.9">

    <uses-sdk android:minSdkVersion="7" />

    <!-- These permissions are NECESSARY for apphance to work -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- Wake lock permission; if disabled, the CPU is not kept awake -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Permission for reading logcat; enable if you need to read it -->
    <uses-permission android:name="android.permission.READ_LOGS" />

    <!-- This two permissions are linked and should be enabled or disabled together -->
    <!-- (they allow gathering network information) -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- Permissions for cell and GPS location, respectively; can be disabled -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Other permissions; disable to turn of reporting of specific conditions -->
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <!-- <supports-screens android:largeScreens="true" android:anyDensity="true" /> -->

    <application
        android:debuggable="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <uses-library android:name="android.test.runner" />

        <activity
            android:name=".ui.ProblemActivity"
            android:configChanges="orientation"
            android:theme="@android:style/Theme.NoTitleBar" />

    </application>

</manifest>